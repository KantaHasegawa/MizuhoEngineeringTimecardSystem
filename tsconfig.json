{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": ".build",
    "target": "ES2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": ["./src/**/*", "src/lambda.ts"],
  "typeRoots": ["src/@types", "node_modules/@types"]
}
