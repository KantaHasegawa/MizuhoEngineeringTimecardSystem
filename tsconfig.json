{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": [
    "./src/**/*"
  ],
  "typeRoots": [
    "src/@types",
    "node_modules/@types"
  ]
}
